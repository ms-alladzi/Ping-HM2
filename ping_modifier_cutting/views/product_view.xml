            <!-- <field name="search_view_id" ref="view_account_invoice_filter"/> -->
        </record>
		
        <menuitem action="action_product_category_secondary" string="Product Categories Secondary" id="menu_product_secondary" parent="sale.prod_config_main" sequence="100"/>
		
		<!-- ### ### -->
		<record id="product_supplierinfo_form_inherit_view" model="ir.ui.view">
            <field name="name">product.supplierinfo.inherit.form.view</field>
            <field name="model">product.supplierinfo</field>
            <field name="inherit_id" ref="product.product_supplierinfo_form_view"/>
            <field name="arch" type="xml">
            	<xpath expr="//form/group/group[1]" position="before">
