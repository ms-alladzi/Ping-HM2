		<!-- ################### -->
		<record id="product_product_tree_view" model="ir.ui.view">
            <field name="name">product.product.tree</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view" />
            <field name="arch" type="xml">
            	<field name="name" position="after">
            		<field name="color_group_id"/>
            		<field name="color_name"/>
            	</field>
            	<field name="barcode" position="attributes">
            		<attribute name="invisible">True</attribute>
            	</field>
            </field>
        </record>
		
		<record id="product_template_ping_form_view" model="ir.ui.view">
			<field name="name">product.template.product.ping.form</field>
			<field name="model">product.template</field>
			<field name="priority" eval="8" />
			<field name="inherit_id" ref="product.product_template_form_view" />
			<field name="arch" type="xml">
				<xpath expr="//form/sheet/div[2]/div" position="inside">
					<div>
                        <field name="for_packing"/>
                        <label for="for_packing"/>
                    </div>
				</xpath>
				<xpath expr="//form/header/button" position="after">
					<button name="action_propose" states="draft" string="Submit" type="object" class="oe_highlight" groups="ping_modifier_cutting.group_product_submit_ping"/>
					<button name="action_approve" states="propose" string="Approve" type="object" class="oe_highlight" groups="ping_modifier_cutting.group_product_approve_ping"/>
					<button name="action_cancel" states="propose,approve" string="Cancel" type="object" class="oe_highlight" groups="ping_modifier_cutting.group_product_approve_ping"/>
					<button name="action_set_to_draft" states="cancel" string="Set to Draft" type="object" class="oe_highlight" groups="ping_modifier_cutting.group_product_submit_ping"/>
					<field name="state" widget="statusbar"/>
				</xpath>
				<field name="type" position="after">
					<field name="sales_type" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="material_name" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="material_code" placeholder="e.g DFT455" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="material_type" placeholder="e.g Polyester" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="material_specification" placeholder="e.g 36/190-200" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="weight_type" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="color_group_id" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="color_name" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="procurement_status" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="categ_secondary_id" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
				</field>
				<field name="list_price" position="after">
					<field name="list_price_roll" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="discount_list_price_roll" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="list_price_pieces" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="discount_list_price_pieces" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="list_price_bundling" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="discount_list_price_bundling" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
					<field name="branch_ids" required="True" widget="many2many_tags" attrs="{'readonly': [('state','!=','draft')]}"/>
				</field>
				<field name="list_price" position="attributes">
					<attribute name="attrs">{'invisible': [('type','=','product')], 'readonly': [('state','!=','draft')]}</attribute>
				</field>
				
				<page name="sales" position="after">
					<page string="Vendors" name="vendors" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}">
						<group>
							<group>
								<field name="vendor_id" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
								<field name="vendor_initial" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
								<field name="vendor_original_name" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
								<field name="vendor_material_name" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
								<field name="vendor_kg_roll" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
							</group>
							<group>
								<field name="vendor_color_group_id" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
								<field name="vendor_color_name" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
								<field name="vendor_material_specification" attrs="{'invisible': [('type','!=','product')], 'required': [('type','=','product')], 'readonly': [('state','!=','draft')]}"/>
							</group>
						</group>
					</page>
					<page string="Dictionary" name="dictionary">
						<field name="material_dictionary_ids">
							<field name="lines_ids">
								<tree editable="bottom">
									<field name="output" />
									<field name="material_quantity" />
									<field name="quantity" />
								</tree>
								<form>
									<group>
										<group>
											<field name="product_id"/>
											<field name="name"/>
										</group>
										<group>
											<field name="create_uid" readonly="True"/>
											<field name="create_date" readonly="True"/>
										</group>
									</group>
									<field name="lines_ids">
										<tree editable="bottom">
											<field name="output"/>
											<field name="material_quantity"/>
											<field name="quantity"/>
										</tree>
										<form>
											<group>
												<group>
													<field name="output"/>
													<field name="material_quantity"/>
													<field name="quantity"/>
												</group>
												<group>
													<field name="name"/>
												</group>
											</group>
										</form>
									</field>
								</form>
							</field>
						</field>
						<newline/>
						<group>
							<field name="note_detail" placeholder="e.g Details Materials"/>
						</group>
					</page>
				</page>
			</field>
		</record>
		
